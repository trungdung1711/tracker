{
  "manifest_version": 3,
  "name": "tracker",
  "version": "1.0",
  "description": "Track browsing data to recommend news and tweets for language learning.",
  "permissions": ["tabs", "activeTab", "scripting", "storage"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ]
}
